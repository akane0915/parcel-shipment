<form class="" action="/results">
  <div class="form-group">
    <label for="length">Enter a length for the parcel:</label>
    <input type="number" id="length" name="length" class="form-control">
    <label for="width">Enter a width for the parcel:</label>
    <input type="number" id="width" name="width" class="form-control">
    <label for="height">Enter a height for the parcel:</label>
    <input type="number" id="height" name="height" class="form-control">
    <label for="weight">Enter a weight for the parcel:</label>
    <input type="number" id="weight" name="weight" class="form-control">
    <label for="delivery">Enter a delivery for the parcel:</label>
    <select id="delivery" name="delivery">
      <option value="ground">Ground</option>
      <option value="2 day">2 Day</option>
      <option value="next day">Next Day</option>
    </select>
  </div>
  <button type="submit" class="btn">Reveal</button>
</form>
